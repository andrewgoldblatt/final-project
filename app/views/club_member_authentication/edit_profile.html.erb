<div >
  <h5>
    Edit Club Member Account
  </h5>

  <div>
    <form action="/modify_club_member" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_club_member.email %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_club_member.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_club_member.last_name %>">
      </div>
      <div>
        <label for="year_box">Year</label>
        <input id="year_box" name="query_year" value="<%= @current_club_member.year %>">
      </div>
      <div>
        <label for="phone_number_box">Phone number</label>
        <input id="phone_number_box" name="query_phone_number" value="<%= @current_club_member.phone_number %>">
      </div>
      <div>
        <label for="rentals_count_box">Rentals count</label>
        <input id="rentals_count_box" name="query_rentals_count" value="<%= @current_club_member.rentals_count %>">
      </div>

    <div>
      <label for="admin_code">Admin Code (Enter the admin code if you are a Gear Manager, otherwise leave blank)</label>
      <input id="admin_code" name="admin_code" placeholder="Gear Manager ID">
    </div>


      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>



      <button>
        Update account
      </button>
    </form>
  </div>
</div>
