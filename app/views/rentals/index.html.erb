<!DOCTYPE html>
<html>
<head>
<style>
td, th {
 border:2px solid #778899;
 border-right:none;
 border-bottom:none;
}

td:nth-last-child(1) {
 border-right:2px solid #778899;
}

th:nth-last-child(1) {
 border-right:2px solid #778899;
}

table {
 border-bottom:2px solid #778899;
}

h1 {text-align: center;}
p {text-align: center;}
div {text-align: center;}

.center {
  margin-left: auto;
  margin-right: auto;
}

</style>
</head>

<body>
<div>
  <div>
    <h1>
      List of all rentals
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new rental
    </h2>

    <form action="/insert_rental" method="post">
      <div>
        <label for="gear_id_box">
          Gear
        </label>

        <input type="text" id="gear_id_box" name="query_gear_id">
      </div>

      <div>
        <label for="check_out_date_box">
          Check out date
        </label>

        <input type="date" id="check_out_date_box" name="query_check_out_date">
      </div>

      <div>
        <label for="return_date_box">
          Return date
        </label>

        <input type="date" id="return_date_box" name="query_return_date">
      </div>

      <div>
        <label for="member_id_box">
          Member
        </label>

        <input type="text" id="member_id_box" name="query_member_id">
      </div>

      <button>
        Create rental
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table >
      <tr>
        <th>
          ID
        </th>

        <th>
          Gear
        </th>

        <th>
          Check out date
        </th>

        <th>
          Return date
        </th>

        <th>
          Member
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_rentals.each do |a_rental| %>
      <tr>
        <td>
          <%= a_rental.id %>
        </td>

        <td>
          <%= a_rental.gear_id %>
        </td>

        <td>
          <%= a_rental.check_out_date %>
        </td>

        <td>
          <%= a_rental.return_date %>
        </td>

        <td>
          <%= a_rental.member_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_rental.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_rental.updated_at) %> ago
        </td>

        <td>
          <a href="/rentals/<%= a_rental.id %>">
            Show details
          </a>
        </td>
        
        <td>
          <a href="/delete_rental/<%= a_rental.id %>">
            Cancel rental
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
</body>